@model EmployeeManagement.Models.DashboardViewModel

<h1>Dashboard</h1>

<p>
    <a href="/Employees" class="btn btn-primary">Employees</a>
</p>
<p>
    <a href="/Departments" class="btn btn-primary">Departments</a>
</p>

<div class="mb-3">
    <strong>Total Employees: </strong>@ViewBag.TotalEmployees
</div>

<h3>Employees by Department</h3>
@if (ViewBag.GroupedByDept != null)
{
    <table class="table">
        <thead>
            <tr><th>Department</th><th>Count</th></tr>
        </thead>
        <tbody>
        @foreach (var g in ViewBag.GroupedByDept)
        {
            <tr>
                <td>@g.Department.Name</td>
                <td>@g.Count</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No employees found.</p>
}

<h3>Recent Hires (last 30 days)</h3>
@if (ViewBag.RecentHires != null && ((List<EmployeeManagement.Models.Employee>)ViewBag.RecentHires).Any())
{
    <table class="table">
        <thead>
            <tr><th>Name</th><th>Department</th><th>Hire Date</th></tr>
        </thead>
        <tbody>
        @foreach(var e in ViewBag.RecentHires)
        {
            <tr>
                <td>@e.FirstName @e.LastName</td>
                <td>@e.Department.Name</td>
                <td>@e.HireDate.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No recent hires.</p>
}

<form method="get" class="mb-3">
    <input type="text" name="search" value="@Model.SearchTerm"
           placeholder="Search employees or departments..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <h3>Filtered Employees</h3>
    @if (Model.FilteredEmployees.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Hire Date</th>
                    <th>Salary</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var e in Model.FilteredEmployees)
            {
                <tr>
                    <td>@e.FirstName @e.LastName</td>
                    <td>@e.Department?.Name</td>
                    <td>@e.Email</td>
                    <td>@e.HireDate.ToShortDateString()</td>
                    <td>@e.Salary</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No employees found.</p>
    }

    <h3>Filtered Departments</h3>
    @if (Model.FilteredDepartments.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Department</th>
                    <th>Number of Employees</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var d in Model.FilteredDepartments)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@Model.Employees.Count(e => e.DepartmentId == d.Id)</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No departments found.</p>
    }
}